<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VirtoCommerce.Mobile.Views.ProductsGridView" Title="{Binding Title}">
    <TableView IsVisible="{Binding DyspalyTable}">
        <TableRoot>
            <TableRoot.
        </TableRoot>
    </TableView>
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center" IsVisible="{Binding IsSync}">
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <ActivityIndicator IsRunning="{Binding IsSync}"/>
            <Label Text="{Binding Status}" />
        </StackLayout>
    </StackLayout>
</ContentPage>